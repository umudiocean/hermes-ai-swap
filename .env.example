# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database"

# Application Environment
NODE_ENV="production"
PORT="5000"

# Optional: If using different database providers
# NEON_DATABASE_URL="postgresql://..."
# SUPABASE_URL="postgresql://..."

# Development only (automatically handled in production)
REPL_ID=""
REPLIT_DOMAIN=""

# Build Configuration (optional)
VITE_APP_NAME="HermesAI Swap"
VITE_APP_URL="https://your-domain.com"

# Web3 Configuration (handled automatically)
# BSC_RPC_URL - Multiple endpoints configured in app
# CONTRACT_ADDRESS - Set in constants

# Third-party Services (optional enhancements)
# COINMARKETCAP_API_KEY=""
# COINGECKO_API_KEY=""

# Security (production recommended)
# SESSION_SECRET="your-secure-random-string"
# JWT_SECRET="your-jwt-secret"

# Email Service (for notifications - optional)
# SMTP_HOST=""
# SMTP_PORT=""
# SMTP_USER=""
# SMTP_PASS=""

# Analytics (optional)
# GOOGLE_ANALYTICS_ID=""
# MIXPANEL_TOKEN=""

# Domain Configuration
DOMAIN="your-domain.com"
HTTPS="true"

# Rate Limiting (recommended for production)
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# File Upload (if needed)
MAX_FILE_SIZE="10MB"
UPLOAD_PATH="./uploads"

# Cache Configuration
REDIS_URL=""  # Optional: For session storage/caching

# Monitoring (optional)
SENTRY_DSN=""  # Error tracking
LOG_LEVEL="info"  # debug, info, warn, error

# Backup Configuration (recommended)
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"